<Application
    x:Class="PlantSitter.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PlantSitter"
    xmlns:common="using:PlantSitter.Common"
    RequestedTheme="Light">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/ResourceDictionary/ColorDictionary.xaml"/>
                <ResourceDictionary Source="/ResourceDictionary/StyleDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <vm:ViewModelLocator x:Key="Locator" xmlns:vm="using:PlantSitter.ViewModel" />
            <common:PlantSitterSettings x:Key="AppSettings" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
